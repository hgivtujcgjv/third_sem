@page
@using Lab12.Pages
@model Lab12.Pages.subscriber.SubModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Books";
}

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sb in Model.sub)
        {
            <tr>
                <td>
                    <a class="btn-primary" asp-page="./Details" asp-route-id="sb.Id">@sb.name</a>
                </td>
                <td>
                    <a class="btn-primary" asp-page="./Edit" asp-route-id="@sb.Id">Edit</a> |
                    <a class="btn-primary" asp-page="./Delete" asp-route-id="@sb.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn41-43 btn-43" asp-area="" asp-page="./Create">Create new</a>
    <a class="btn41-43 btn-43" asp-page="../Authors/Index">Authors</a>
    <a class="btn41-43 btn-43" asp-page="../Publishers/Index">Publishers</a>
</div>